
<div style="margin-top: 75px;">
<h1>Add Post</h1>
<%= form_for :post , url: posts_path do |f|%>
<% if @post.errors.any?%>
    <%@post.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <%end%>
<%end%>

<div>
  <%= f.text_field :user_id, type: "hidden", value: current_user.id %>
</div>

<p>
  <%= f.label :title %>
  <br>
  <%= f.text_field(:title,{:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :text %>
  <br>
  <%= f.text_area :body, size: "27x7", class: "form-control" %>
</p>

<p><%= f.file_field :images, multiple:true %></p>


<p><%= f.submit({:class => 'btn btn-primary'}) %>
<%= link_to 'Back' , posts_path ,method: 'get', :class => 'btn btn-danger'%>
</p>
<%end%>
</div>
